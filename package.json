{
    "name": "expense-tracker",
    "version": "0.1.0",
    "description": "",
    "scripts": {
        "dev": "concurrently 'cd backend && npm run dev' 'cd frontend && npm run dev'",
        "dev-mem-db": "concurrently 'cd backend && npm run mem-db' 'cd frontend && npm run dev'",
        "build": "concurrently 'cd backend && npm run build' 'cd frontend && npm run build'"
    },
    "license": "MIT",
    "dependencies": {
        "concurrently": "^7.6.0",
        "prettier": "^2.8.4"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "@types/chart.js": "^2.9.37"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "none",
        "singleQuote": true,
        "semi": true,
        "importOrder": [
            "^@(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "importOrderParserPlugins": [
            "typescript",
            "decorators-legacy"
        ],
        "overrides": [
            {
                "files": "*.less",
                "options": {
                    "parser": "postcss"
                }
            }
        ]
    }
}
