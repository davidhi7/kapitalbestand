{
    "name": "kapitalbestand-backend",
    "private": true,
    "type": "module",
    "main": "src/app.js",
    "scripts": {
        "build": "tsc",
        "start": "NODE_ENV=production node dist/app.js",
        "dev": "source ./test_env.sh ; nodemon src/app.js --migrate",
        "test": "NODE_ENV=test source ./test_env.sh ; c8 mocha 'src/**/*.test.{js,ts}'",
        "test:debug": "NODE_ENV=test source ./test_env.sh ; mocha --no-timeouts 'src/**/*.test.{js,ts}'"
    },
    "license": "MIT",
    "dependencies": {
        "argon2": "^0.41.0",
        "connect-session-sequelize": "^7.1.7",
        "express": "^4.19.2",
        "express-session": "^1.18.0",
        "express-validator": "^7.2.0",
        "lodash": "^4.17.21",
        "memorystore": "^1.6.7",
        "morgan": "^1.10.0",
        "pg": "^8.12.0",
        "pg-hstore": "^2.3.4",
        "reflect-metadata": "^0.2.2",
        "sequelize": "^6.37.3",
        "sequelize-typescript": "^2.1.6",
        "umzug": "^3.8.1",
        "validator": "^13.12.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.18",
        "@types/chai-as-promised": "^7.1.8",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/http-errors": "^2.0.4",
        "@types/mocha": "^10.0.7",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.5.0",
        "@types/sequelize": "^4.28.20",
        "@types/sinon": "^17.0.3",
        "@types/tmp": "^0.2.6",
        "@types/validator": "^13.12.1",
        "c8": "^10.1.2",
        "chai": "^5.1.1",
        "chai-as-promised": "^8.0.0",
        "mocha": "^10.7.3",
        "nodemon": "^3.1.4",
        "sinon": "^18.0.0",
        "sqlite3": "^5.1.7",
        "supertest": "^7.0.0",
        "tmp": "^0.2.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "nodemonConfig": {
        "ignore": [
            "*.test.js",
            "*.test.ts"
        ],
        "exec": "node --loader ts-node/esm --enable-source-maps",
        "ext": ".js,.ts"
    },
    "mocha": {
        "require": [
            "ts-node/register",
            "test/hooks.ts"
        ],
        "node-option": [
            "experimental-specifier-resolution=node",
            "loader=ts-node/esm",
            "enable-source-maps=true"
        ]
    }
}
