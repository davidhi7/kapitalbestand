{
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "include": ["./src/**/*", "./test/**/*"],
    "ts-node": {
        "transpileOnly": true
    }
}
