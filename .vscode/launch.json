{
    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "mocha",
                "--no-timeouts",
                "--colors",
                "${workspaceFolder}/backend/src/**/*.test.{js,ts}"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Backend tests",
            "program": "/usr/bin/npx",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "cwd": "${workspaceFolder}/backend/",
            "type": "node"
        }
    ]
}
